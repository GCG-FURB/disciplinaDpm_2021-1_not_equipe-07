<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/plantabaixa"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="124dp"
        tools:srcCompat="@drawable/plantabaixa" />

    <ImageView
        android:id="@+id/imageViewCircle"
        android:layout_width="17dp"
        android:layout_height="29dp"
        app:srcCompat="@drawable/circuloseta"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="221dp" />

    <TextView
        android:id="@+id/textViewValuesLinearAccelerometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Linear Accelerometer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewValuesOrientation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orientation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCircle" />
</androidx.constraintlayout.widget.ConstraintLayout>